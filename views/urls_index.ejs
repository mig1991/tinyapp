<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" />
    <title>TinyApp</title>
</head>
<body>
    <%- include('partials/_header') %>
    <div class="container" style="margin-top: 20px;">
        <h3>My URLs</h3>
        <a href="/urls/new" class="btn btn-success mb-3"><i class="fas fa-plus-circle"></i> Create New Short URL</a>
        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th scope="col">Short URL ID</th>
                    <th scope="col">Long URL</th>
                    <th scope="col">Actions</th>
                    <th scope="col">Edit</th> 
                </tr>
            </thead>
            <tbody>
                <% Object.keys(urls).forEach(function(id) { %>
                <tr>
                    <td><%= id %></td>
                    <td><a href="<%= urls[id].longURL %>" target="_blank"><%= urls[id].longURL %></a></td>
                    <td>
                        <form method="POST" action="/urls/<%= id %>/delete" style="display: inline;">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                    <td>
                        <a href="/urls/<%= id %>/edit" class="btn btn-info btn-sm">Edit</a> <!-- edit link -->
                    </td>
                </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>
</html>